# MT5 Credentials
MT5_LOGIN=your_login_here
MT5_PASSWORD=your_password_here
MT5_SERVER=your_server_here

# Trading Parameters
SYMBOL=EURUSD
TIMEFRAME=M15
DATA_COUNT=1000
BASE_RISK=0.01  # 1% risk per trade
START_BALANCE=10000

# Machine Learning Settings
ENABLE_ML_LEARNING=true
ML_CONFIDENCE_THRESHOLD=0.7
ML_MIN_SAMPLES=100
ML_RETRAIN_INTERVAL=50
LEARNING_RATE=0.01
MEMORY_DECAY_RATE=0.95
PATTERN_WEIGHT_DECAY=0.98

# Risk Management
ENABLE_ADAPTIVE_RISK=true
MAX_RISK_PER_TRADE=0.02  # 2% maximum risk per trade
MAX_DAILY_RISK=0.06  # 6% maximum daily risk
MAX_DRAWDOWN=0.15  # 15% maximum drawdown

# Execution Settings
IMPACT_THRESHOLD=0.001
MIN_FILL_RATIO=0.95
MAX_SLIPPAGE=0.0005

# Monitoring Settings
ENABLE_DISCORD_NOTIFICATIONS=false
ENABLE_TELEGRAM_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=your_discord_webhook_here
TELEGRAM_BOT_TOKEN=your_telegram_token_here
